{% extends 'base.html.twig' %}

{% block body %}

    <!-- Display page notation and comments for Boosters -->
    {% if is_granted('ROLE_BOOSTER') %}
        <div class="row">
            <div class="block_top col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6">
                <h1 class="h1_top_page">Notez le Boosté !</h1>
                <hr>
                <h2 class="h2_toppage">Un Boosté vient de vous offrir de son temps libre et de ses compétences.</h2>
                {{ form_start(form2) }}
                {{ form_widget(form2) }}
                {{ form_end(form2) }}
            </div>
        </div>

        <!-- Display page notation and comments for Society -->
    {%  elseif is_granted('ROLE_BOOSTE')  %}
        <div class="row">
            <div class="block_top col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6">
                <h1 class="h1_top_page">Notez le Booster !</h1>
                <hr>
                <h2 class="h2_toppage">Un Booster vient de vous offrir de son temps libre et de ses compétences.</h2>
                {{ form_start(form1) }}
                {{ form_widget(form1) }}
                {{ form_end(form1) }}
            </div>
        </div>

    {% endif %}

{% endblock %}