{% extends 'base.html.twig' %}

{% block body %}

    {# Display page notation and comments for Boosters => they vote and comment for a Booste #}
    {% if is_granted('ROLE_BOOSTER') %}
        <div class="row block_content_notes">
            <div class="block_top col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6">
                <div>
                    <h1 class="h1_toppage">Notez le Boosté !</h1>
                    <hr>
                    <h2 class="h2_toppage">Vous venez d'offrir à un Boosté, de votre temps libre et de vos compétences.</h2>
                </div>

                {# Star rating system to note a Boosté #}
                <div class="stars_list_page" id="stars_list_notes">
                    <p class="text-center">Attribuez une note au Boosté :</p>
                        <ul class="rating">
                            <li><i class="star_grey fa fa-star fa-2x" id= "star1" aria-hidden="true"></i></li>
                            <li><i class="star_grey fa fa-star fa-2x" id= "star2" aria-hidden="true"></i></li>
                            <li><i class="star_grey fa fa-star fa-2x" id= "star3" aria-hidden="true"></i></li>
                            <li><i class="star_grey fa fa-star fa-2x" id= "star4" aria-hidden="true"></i></li>
                            <li><i class="star_grey fa fa-star fa-2x" id= "star5" aria-hidden="true"></i></li>
                        </ul>
                </div>

                <div>
                {{ form_start(form2) }}
                {{ form_widget(form2) }}
                {{ form_end(form2) }}
                </div>
            </div>
        </div>

        {# Display page notation and comments for Society => they vote and comment for a Booster #}
    {%  elseif is_granted('ROLE_BOOSTE')  %}
        <div class="row">
            <div class="block_top col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6">
                <div>
                    <h1 class="h1_top_page">Notez le Booster !</h1>
                    <hr>
                    <h2 class="h2_toppage">Un Booster vient de vous offrir de son temps libre et de ses compétences.</h2>
                </div>

                {# Star rating system to note a Booster #}
                <div class="stars_list_page" id="stars_list_notes">
                    <p class="text-center">Attribuez une note au Booster :</p>
                    <ul class="rating">
                        <li><i class="star_grey fa fa-star fa-2x" id= "starA" aria-hidden="true"></i></li>
                        <li><i class="star_grey fa fa-star fa-2x" id= "starB" aria-hidden="true"></i></li>
                        <li><i class="star_grey fa fa-star fa-2x" id= "starC" aria-hidden="true"></i></li>
                        <li><i class="star_grey fa fa-star fa-2x" id= "starD" aria-hidden="true"></i></li>
                        <li><i class="star_grey fa fa-star fa-2x" id= "starE" aria-hidden="true"></i></li>
                    </ul>
                </div>

                <div>
                    {{ form_start(form1) }}
                    {{ form_widget(form1) }}
                    {{ form_end(form1) }}
                </div>
        </div>


{% block javascripts %}     {# JQuery event to change the color of the grey stars on click in the view #}
    <script>
        $(".rating").find('li').click(function() {
            $(".star-active").removeClass('star-active');
            $(this).addClass('star-active').prevAll().addClass('star-active');
        });
    </script>
{% endblock %}

    {% endif %}
{% endblock %}