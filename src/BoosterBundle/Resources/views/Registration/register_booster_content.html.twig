{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}


{% block body %}
    <div class="block_subs_forms">
        {{ form_start(form, {'method': 'post', 'attr': {'class': 'fos_user_registration_register'}}) }}
        {{ form_widget(form) }}
        <label class="checkbox-inline"><input type="checkbox" value="" required>« En m’inscrivant sur The Booster,
            je respecte les valeurs mises en avant par le site : <a href ="{{ path('booster_charte') }}"> La Charte</a></label>
        <div class="btn_register">
            <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-danger"/>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}


