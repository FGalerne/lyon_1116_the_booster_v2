{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}


{% block body %}
    <div class="block_subs_forms">
        {{ form_start(form, {'method': 'post', 'attr': {'class': 'fos_user_registration_register'}}) }}
        {{ form_row(form.email) }}
        {{ form_label(form.plainPassword.first, 'Mot de passe')}}
        <p class="tiny">Le mot de passe doit contenir minimum 8 caractères.</p>
        {{form_widget(form.plainPassword.first, {'attr' : {'pattern' : '[A-Za-z0-9]{8,16}'}})}}
        {{ form_label(form.plainPassword.second, 'Retaper le mot de passe ')}}
        {{ form_widget(form.plainPassword.second) }}
        {{ form_row(form.title) }}
        {{ form_row(form.firstname) }}
        {{ form_row(form.lastname) }}
        <label class="checkbox-inline"><input type="checkbox" value="" required>« En m’inscrivant sur The Booster, je respecte les valeurs mises
            en avant par le site : <a href ="{{ path('booster_charte') }}" target="_blank"> La Charte</a> </label>
        <div class="btn_register">
            <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-danger"/>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}


