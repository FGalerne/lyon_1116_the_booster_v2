{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}
    {% if booster %}

    <div class="block_subs_forms">
        {{ form_start(form, {'method': 'post', 'attr': {'class': 'fos_user_registration_register'}}) }}
        {{ form_widget(form) }}
        <div class="btn_register">
            <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-danger"/>
        </div>
        {{ form_end(form) }}
    </div>

    {% else %}

    <div class="block_subs_forms">
        {{ form_start(form, {'method': 'post', 'attr': {'class': 'fos_user_registration_register'}}) }}
            {{ form_row(form.email) }}
            {{ form_label(form.plainPassword.first, 'Créez un mot de passe')}}
                <p class="tiny">Le mot de passe doit contenir 6 caractères minimum</p>
                {{form_widget(form.plainPassword.first, {'attr' : {'pattern' : '.{6,}'}})}}
            {{ form_label(form.plainPassword.second, 'Confirmez votre mot de passe')}}
                {{ form_widget(form.plainPassword.second) }}
            {{ form_row(form.title) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.professionalfunction) }}
            {{ form_row(form.nameproject) }}
            {{ form_row(form.typeproject) }}
            {{ form_widget(form.createtime) }}
            <div id="siretGroup">
                {{ form_row(form.siretnumber) }}
            </div>
            {% if required == 'siret' %}
                <div id="required"><em>Ce champ est obligatoire</em></div>
            {% endif %}
            {{ form_row(form.phone) }}
            {% if required == 'phone' %}
                <div id="required"><em>! Ce champ est obligatoire</em></div>
            {% endif %}
       <label class="checkbox-inline"><input type="checkbox" value="" required>« En m’inscrivant sur The Booster, je respecte les valeurs mises

            en avant par le site : <a href ="{{ path('booster_charte') }}" target="_blank"> La Charte</a> </label>
        {{ form_row(form.recaptcha) }}
        <div class="btn_register">
            <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-danger btn_login_subsc"/>
        </div>

        {{ form_end(form) }}
    </div>

    {% endif %}
{% endblock %}


