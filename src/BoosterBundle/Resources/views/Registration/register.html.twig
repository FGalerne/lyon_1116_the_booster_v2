{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}The Booster | Inscription {% endblock %}

{% block h1 %}
    <div class="text-center h1_top_page">
        <h1>Je crée mon compte</h1>
        <hr class="hr_" id="hr_connect"/>
    </div>
{% endblock %}

{% block fos_user_content %}
    {% include "FOSUserBundle:Registration:register_content.html.twig" %}
{% endblock fos_user_content %}

{% block login %}
    <div class="block_login">
        <hr class="separation_bar">
        <h2 class="h2_login">Je possède déjà un compte</h2>
        <div>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}" class="ah">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                <a href="{{ path('fos_user_security_login') }}" class="ah">Je me connecte</a>
            {% endif %}
        </div>

        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}

