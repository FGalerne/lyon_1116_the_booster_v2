{% extends 'base.html.twig' %}

{% block body %}
    <div class="container project-subscription-container">
        <h1>Validez votre projet !</h1>
        <div class="row">
            <div class="col-xs-12 validation-subtitle">
                Une fois votre projet validé des deux cotés, il sera déplacé dans l'onglet projets terminés
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-8 col-md-offset-2">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <input class="postulation-button col-xs-12" type="submit" value="Valider" />
                {{ form_end(form) }}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-8 col-md-offset-2">
                {% if is_granted('Role_Booster') %}
                    <a class="postulation-button col-xs-12" href="{{ path('dashboard_booster', { 'slug': slug }) }}">Retourner au dashboard</a>
                {% else %}
                    <a class="postulation-button col-xs-12" href="{{ path('dashboard_society', { 'slug': slug }) }}">Retourner au dashboard</a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}