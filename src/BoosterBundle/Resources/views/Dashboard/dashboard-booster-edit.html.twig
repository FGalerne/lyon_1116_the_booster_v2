{% extends 'base.html.twig' %}
{% block title %}Mise à jour du profil Booster | The Booster{% endblock %}

{% block body %}
    <section class="container-fluid global-presentation">
        <div class="container col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6">
           <div class="block_hedit text-center">
               <h1>Mettre à jour les informations de votre profil Booster</h1>
               <hr>
           </div>
            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <div class="btn_ed">
                <input type="submit" class="btn btn-danger dashb_btn" value="Enregistrer les modifications" />
            </div>
            {{ form_end(edit_form) }}
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/countdown.js')}}"></script>
    <script>
        tinymce.init({
            elementpath: false,
            selector:'.WYSIWYG',
            forced_root_block: false,
            menubar: 'tools',
            toolbar: 'undo redo | bold italic underline strikethrough | fontsizeselect',
            height : 200,
            plugins: "charactercount",
            maxCount: 200,
            minCount: 1
        });
    </script>
{% endblock %}
