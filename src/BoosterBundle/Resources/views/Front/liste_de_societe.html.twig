{% extends 'base.html.twig' %}
{% block title %} Liste des Sociétés | The Booster{% endblock %}
{% block body %}
    <section class="container-fluid" id ="list-society">
        <div class="row" id="home_startup_title">
            <div class="col-xs-offset-1 col-xs-10">
                <h2 class="h2_hmpg">Les StartUp qui ont des projets sur THE BOOSTER</h2>
                <h3 class="h3_hmpg">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla ultricies sit amet
                    felis id tincidunt. Pellentesque congue sem ipsum, efficitur.</h3>
                <hr>
            </div>
        </div>

    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-1 col-sm-10">
        {% for society in societies %}
        <div class="col-xs-12 col-sm-3 col-md-3">
            <a href="">
                <div class="global-society">
                    <img  class ="img-list-society" src="{{ asset("img/food&you.jpg") }}">
                    <h5 class="name-list-society">{{ society.societyName }}</h5>
                    <p class="nombre-de-projet">Nombre de projets : 100</p>
                </div>
            </a>
        </div>
        {% endfor %}
    </div>
        <ul class="pager">
            <li class="previous">
                {% if page > 1 %}
                    <a href="{{ path('list_society', {'page': page - 1}) }}">
                        Plus récent
                    </a>
                {% endif %}
            </li>
            <li class="next">
                {% if page < maxPage %}
                    <a href="{{ path('list_society', {'page': page + 1}) }}">
                        Plus ancien
                    </a>
                {% endif %}
            </li>
        </ul>
    </section>
{% endblock %}
