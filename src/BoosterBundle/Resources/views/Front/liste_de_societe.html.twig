{% extends 'base.html.twig' %}
{% block title %} Liste des Sociétés | The Booster{% endblock %}
{% block body %}
    <section class="container-fluid" id ="list-society">
        <div class="row" id="home_startup_title">
            <div class="col-xs-offset-1 col-xs-10">
                <h2 class="h2_hmpg">Parcourez les besoins des Boostés, découvrez tous les Coups de Boost</h2>
                <h3 class="h3_hmpg">Allez à la rencontre des projets et des entreprises que vous voulez aider</h3>
                <hr>
            </div>
        </div>

    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-1 col-sm-10">
        <ul class="pager">
            <li id="previous">
                {% if page > 1 %}
                    <a href="{{ path('list_society', {'page': page - 1}) }}">
                        <i class="fa fa-arrow-left" aria-hidden="true"></i>
                    </a>
                {% endif %}
            </li>
            <li id="next">
                {% if page < maxPage %}
                    <a href="{{ path('list_society', {'page': page + 1}) }}" >
                        <i class="fa fa-arrow-right" aria-hidden="true"></i>
                    </a>
                {% endif %}
            </li>
        </ul>
        {% for society in societies %}
        <div class="col-xs-12 col-sm-3 col-md-3">
            <a href="">
                <div class="global-society">
                    <div>
                        <img src="{{ society.photo|default ? asset('img/uploads/societies/' ~ society.photo) : asset('img/avatar-default.png') }}">
                    </div>
                    <h5 class="name-list-society">{{ society.societyName }}</h5>
                    <p class="nombre-de-projet">Nombre de projets : 100</p>
                </div>
            </a>
        </div>
        {% endfor %}
        <ul class="pager">
            <li id="previous">
                {% if page > 1 %}
                    <a href="{{ path('list_society', {'page': page - 1}) }}">
                        <i class="fa fa-arrow-left" aria-hidden="true"></i>
                    </a>
                {% endif %}
            </li>
            <li id="next">
                {% if page < maxPage %}
                    <a href="{{ path('list_society', {'page': page + 1}) }}" >
                        <i class="fa fa-arrow-right" aria-hidden="true"></i>
                    </a>
                {% endif %}
            </li>
        </ul>
    </div>
    </section>
{% endblock %}
