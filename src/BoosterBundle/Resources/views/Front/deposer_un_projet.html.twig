{% extends 'base.html.twig' %}
{%  block title %}Boosté | Déposer un projet{% endblock %}
{% block body %}
    <div class="form_title">
        <h1 class="h1_toppage">Déposer un projet</h1>
    </div>
    <div class="container text-center">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/countdown.js')}}"></script>
    <script>
        tinymce.init({
            selector:'.WYSIWYG',
            forced_root_block: false,
            menubar: 'tools',
            toolbar: 'undo redo | bold italic underline strikethrough | fontsizeselect',
            height : 300,
            plugins: "charactercount",
            setup: function (editor) {
                editor.on('keyup', function(e) {
                    var count = this.plugins["charactercount"].getCount();
                    if (count > 200)
                        $('#mceu_7-body').css('border', 'solid 1px red');
                    else
                        $('#mceu_7-body').css('border', 'none');
                });
                editor.on('submit', function(e) {
                    var count = this.plugins["charactercount"].getCount();
                    if (count > 200){
                        e.preventDefault();
                    }
                    else{}

                });

            },
            init_instance_callback: function (editor) {
                $('.mce-tinymce').show('fast');
                $(editor.getContainer()).find(".mce-path").css("display", "none");
            }
        });
    </script>
{% endblock %}