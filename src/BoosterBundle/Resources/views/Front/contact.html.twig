{% extends 'base.html.twig' %}
{%  block title %}Contact | The Booster{% endblock %}
{% block body %}

    <div class="row who_form_ext">
        <div class="who_form_int col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6" id="who_form">
            <h2 class="text-center who_h2" id="contactus">Contactez-nous !</h2>
            <h3 class="who_h3">Vous avez des questions ? Vous voulez nous rencontrer, prendre un café ?</h3>
        </div>
        <div class="who_form_int col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">
            <h3 class="who_h3">{{ app.request.get('send') }}</h3>
            <form method="POST" action="{{ path ('contact_send_mail') }}">
                <div class="form-group">Nom:
                    <input type="text" placeholder="Nom" class="form-control" name="name" required/>
                </div>
                <div class="form-group">Prénom:
                    <input type="text" placeholder="Prénom" class="form-control" name="surname" required/>
                </div>
                <div class="form-group">Email:
                    <input type="email" placeholder="Email" class="form-control" name="email" required/>
                </div>
                <div class="form-group">Type de demande:
                    <label class="labelwidth">
                        <select name="type" >
                            <option value="Press">Press</option>
                            <option value="RH">RH</option>
                            <option value="Infos générales">Infos générales</option>
                            <option value="Problème de paiement">Problème de paiement</option>
                            <option value="Problème technique">Problème technique</option>
                        </select>
                    </label>
                </div>
                <div class="form-group">Sujet:
                    <input type="text" placeholder="Sujet" class="form-control" name="subject" required/>
                </div>
                <div class="form-group">Message:
                    <textarea class="form-control WYSIWYG" placeholder="Votre message" name="message"></textarea>
                    <div class="row all_blsp_xs"></div>
                    <button type="submit" class="btn btn-submit">Envoyer</button>
                </div>
            </form>
            <div class="row all_blsp"></div>
        </div>
    </div>
{% endblock %}
