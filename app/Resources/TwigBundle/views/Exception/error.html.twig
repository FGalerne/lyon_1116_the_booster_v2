{# app/Resources/TwigBundle/views/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Erreur {{ status_code }} | The Booster{% endblock %}
{% block body %}
        <div class="container-fluid error-page-container">
            <div class="row">
                {% if status_code == 404 %}
                    <img class="error-page-image" src="{{ asset('img/the-booster-404.png')}}"/>
                {% elseif status_code == 500 %}
                    <img class="error-page-image" src="{{ asset('img/the-booster-500.png')}}"/>
                {% endif %}
            </div>
            <div class="row">
                <div class="col-xs-12 text-center error-margin text-error">
                    une erreur est survenue
                </div>
                <div class="col-xs-12 text-center  text-error">
                    <strong>{{ status_code }} {{ status_text }}</strong>
                </div>
                <div class="col-xs-12 text-center error-margin text-error">
                    <a href="{{ path('booster_homepage') }}">retourner sur la page d'accueil</a>
                </div>
            </div>
        </div>
{% endblock %}